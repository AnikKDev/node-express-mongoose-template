{
  "name": "node-express-backend-template",
  "version": "1.0.0",
  "description": "template for starting a backend project",
  "main": "src/server.ts",
  "author": "Anik K Dev",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.ts": "yarn lint-prettier"
  },
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/server.ts ",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "lint-fix": "eslint --fix",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prettier-fix": "prettier --write .",
    "lint-prettier": "yarn lint && yarn prettier"
  },
  "devDependencies": {
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "3.0.0",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "colors": "1.4.0",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "http-status": "1.6.2",
    "mongoose": "7.3.4",
    "ts-node-dev": "2.0.0",
    "zod": "3.21.4"
  }
}
